{
  "name": "xhs-generator",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "next build",
    "start": "next start",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "better-sqlite3": "11.7.0"
  },
  "devDependencies": {
    "concurrently": "8.2.2",
    "electron": "30.0.6",
    "electron-builder": "24.13.3",
    "wait-on": "7.2.0"
  },
  "build": {
    "appId": "com.galaxyxieyu.xhs-runner",
    "productName": "XHS Runner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**",
      "pages/**",
      "package.json",
      "docs/**"
    ],
    "asar": true
  }
}
