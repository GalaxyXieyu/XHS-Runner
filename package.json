{
  "name": "xhs-generator",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "dev": "npm run build:server && concurrently -k \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:next": "next dev",
    "dev:electron": "npm run build:server && wait-on http://localhost:3000 && electron .",
    "build:server": "node_modules/typescript/bin/tsc -p tsconfig.server.json",
    "build:xhs-core": "node_modules/typescript/bin/tsc -p electron/mcp/xhs-core/tsconfig.json",
    "smoke:xhs": "npm run build:server && npm run build:xhs-core && node electron/server/scripts/xhsSmoke.js",
    "smoke:xhs-capture": "npm run build:server && npm run build:xhs-core && node electron/server/scripts/xhsThemeCaptureSmoke.js",
    "build": "next build",
    "start": "next start",
    "pack": "npm run build:server && npm run build:xhs-core && electron-builder --dir",
    "dist": "npm run build:server && npm run build:xhs-core && electron-builder",
    "dist:mac": "npm run build:server && npm run build:xhs-core && electron-builder --mac",
    "dist:win": "npm run build:server && npm run build:xhs-core && electron-builder --win",
    "rebuild": "electron-rebuild"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-aspect-ratio": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-context-menu": "^2.2.6",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-hover-card": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-toggle-group": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "better-sqlite3": "11.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "*",
    "cmdk": "^1.1.1",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.487.0",
    "next": "14.2.5",
    "next-themes": "^0.4.6",
    "puppeteer": "^22.0.0",
    "react": "18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.55.0",
    "react-resizable-panels": "^2.1.7",
    "recharts": "^2.15.2",
    "sonner": "^2.0.3",
    "string-width": "^4.2.3",
    "tailwind-merge": "*",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.1",
    "concurrently": "8.2.2",
    "electron": "^30.0.6",
    "electron-builder": "24.13.3",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.4.5",
    "wait-on": "7.2.0"
  },
  "build": {
    "appId": "com.galaxyxieyu.xhs-runner",
    "productName": "XHS Runner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**",
      "pages/**",
      "package.json",
      "docs/**"
    ],
    "asar": true
  }
}
